# PostgreSQL Database Configuration
DATABASE_URL=postgresql://appuser:secret@localhost:5432/childcare_dev

# Graph Database Configuration
GRAPH_DB_TYPE=tigergraph  # Options: "tigergraph" or "neo4j"

# TigerGraph Configuration (if GRAPH_DB_TYPE=tigergraph)
TIGERGRAPH_HOST=http://localhost:9000
TIGERGRAPH_USERNAME=tigergraph
TIGERGRAPH_PASSWORD=password
TIGERGRAPH_GRAPH_NAME=childcare
TIGERGRAPH_VERSION=3.9.0

# Neo4j Configuration (if GRAPH_DB_TYPE=neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_LIFETIME=3600
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# API Configuration
API_BASE_URL=http://localhost:8000
PORT=8001

# Progressive Loading Configuration
INITIAL_BATCH_SIZE=100
MAX_CENTERS_PER_REQUEST=1000
MIN_QUALITY_THRESHOLD=0.7
TARGET_MATCHES=10

# Scoring Weights
PREFERENCE_WEIGHT=0.4
PROPERTY_WEIGHT=0.3
AVAILABILITY_WEIGHT=0.2
QUALITY_WEIGHT=0.1

# OpenAI Integration (for main app)
OPENAI_API_KEY=your-openai-api-key-here

# Embedding Configuration
EMBEDDING_MODEL_ID=text-embedding-3-small

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
TZ=Europe/Berlin