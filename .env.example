# Daycare Schedule Optimizer - Environment Variables Template
# Copy this file to .env and configure with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Basic application configuration
APP_NAME="Daycare Schedule Optimizer"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# Redis connection pool settings
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================

# Solver configuration
MAX_SOLVER_TIME_SECONDS=60
MAX_STAFF_COUNT=100
MAX_TIME_SLOTS_PER_WEEK=168

# Constraint weights (0.0 to 1.0)
PREFERENCE_WEIGHT=0.3
OVERTIME_PENALTY_WEIGHT=0.4
FAIRNESS_WEIGHT=0.2
CONTINUITY_WEIGHT=0.1

# Business rules
MAX_CONSECUTIVE_HOURS=8
MIN_BREAK_BETWEEN_SHIFTS=10
MAX_WEEKLY_HOURS=40
MIN_SHIFT_DURATION=2.0
MAX_SHIFT_DURATION=10.0

# =============================================================================
# STAFF-TO-CHILD RATIOS
# =============================================================================

# Age group ratios (1 staff per X children)
INFANT_RATIO=4
TODDLER_RATIO=6
PRESCHOOL_RATIO=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Structured logging
ENABLE_STRUCTURED_LOGGING=true
LOG_REQUEST_DETAILS=true
LOG_RESPONSE_DETAILS=false

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics and monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
PROMETHEUS_MULTIPROC_DIR=/tmp

# Health check configuration
HEALTH_CHECK_TIMEOUT=30
ENABLE_DEEP_HEALTH_CHECKS=true

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API security
API_KEY_HEADER=X-API-Key
API_KEY=your-secret-api-key-here
ENABLE_API_KEY_AUTH=false

# CORS settings
CORS_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# DATABASE SETTINGS (if needed in future)
# =============================================================================

# PostgreSQL (future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/scheduler_db
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=30
# DATABASE_POOL_TIMEOUT=30

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email notifications (future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@domain.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# Notification settings
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings (only used when DEBUG=true)
DEV_RELOAD=true
DEV_RELOAD_DIRS=["src", "tests"]
DEV_LOG_LEVEL=DEBUG

# Testing configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_DB=1
TEST_CACHE_TTL=60

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Worker configuration
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=5

# SSL/TLS configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_CA_CERT_PATH=/path/to/ca-cert.pem

# =============================================================================
# CLOUD PROVIDER SETTINGS
# =============================================================================

# AWS settings (if using AWS services)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=scheduler-data

# Azure settings (if using Azure services)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_STORAGE_CONTAINER=scheduler-data

# Google Cloud settings (if using GCP services)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_BATCH_PROCESSING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SCHEDULE_TEMPLATES=true
ENABLE_AUTOMATED_NOTIFICATIONS=false
ENABLE_MACHINE_LEARNING_FEATURES=false

# Experimental features
ENABLE_EXPERIMENTAL_SOLVER=false
ENABLE_QUANTUM_OPTIMIZATION=false

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Container settings
CONTAINER_PORT=8000
CONTAINER_MEMORY_LIMIT=1Gi
CONTAINER_CPU_LIMIT=1000m

# Kubernetes settings
NAMESPACE=daycare-scheduler
SERVICE_ACCOUNT=scheduler-service
REPLICA_COUNT=3

# Load balancer settings
LOAD_BALANCER_IP=
LOAD_BALANCER_PORT=80
LOAD_BALANCER_PROTOCOL=HTTP

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/data/backups

# =============================================================================
# ALERTING AND NOTIFICATIONS
# =============================================================================

# Alert thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90
ALERT_ERROR_RATE_THRESHOLD=5

# Notification channels
ALERT_EMAIL_RECIPIENTS=["admin@company.com", "ops@company.com"]
ALERT_SLACK_CHANNEL=#alerts
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# =============================================================================
# CUSTOM BUSINESS RULES
# =============================================================================

# Center-specific settings
DEFAULT_OPERATING_HOURS_START=06:00
DEFAULT_OPERATING_HOURS_END=20:00
DEFAULT_TIMEZONE=America/New_York

# Scheduling preferences
PREFER_FULL_TIME_STAFF=true
MINIMIZE_SPLIT_SHIFTS=true
BALANCE_WEEKEND_COVERAGE=true

# Compliance settings
ENFORCE_BREAK_REQUIREMENTS=true
ENFORCE_OVERTIME_LIMITS=true
ENFORCE_CONSECUTIVE_DAY_LIMITS=true